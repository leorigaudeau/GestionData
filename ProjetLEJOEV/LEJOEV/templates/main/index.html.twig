{% block title %}{% endblock %}

{% block body %}
<div class="globale">
    <div class="personna">
            <select class="pe-dropbox" id="select">
                {% for user in utilisateurs %}
                    <option value="{{ user.id }}">{{ user.prenom }}</option>
                {% endfor %}
            </select>
            <input class="pe-input" type="submit" value="Analyser" onclick="redirect()">

    </div>
    <div class="container1">
        <div class="banania1">
            <h2>Score personel</h2>
            <div class="graph1"></div>
            <p>Nom : {{ utilisateur.nom }} <br>
            Prenom : {{ utilisateur.prenom }} <br>
            Age : {{ utilisateur.age}} ans</p>
        </div>
        <div class="banania2">
            <h2>Details score</h2>
            <div class="graph2"></div>
            <button type="button" class="btn">AmÃ©liorer votre score !</button>
        </div>
